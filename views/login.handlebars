<section class="section">
        {{!-- Sign up form --}}
        <form class="signup-form">
          <div class="box">
            <div class="field">
              <h2 class="subtitle">Sign Up today!</h2>
                <label class="label">Email</label>
                <div class="control has-icons-left">
                  <input id="email-signup" class="input" type="email" placeholder="johnnyappleseed@gmail.com">
                  <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                  <label class="label">Password</label>
                  <div class="control">
                      <input id="password-signup" class="input" type="password" placeholder="1234">
                  </div>
              </div>
              <div class="field">
                <div class="control">
                  <button class="button is-link">Submit</button>
                </div>
              </div>
          </div>
        </form>
</section>

